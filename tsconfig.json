{
  "compilerOptions": {
    "target": "ES2020",             // Modern JS features allowed
    "module": "ESNext",             // ES modules
    "moduleResolution": "Node",     // Node-style resolution
    "esModuleInterop": true,        // Allows default import from CommonJS
    "strict": true,                 // Type safety
    "outDir": "dist",               // Compiled JS goes here
    "resolveJsonModule": true,      // Allows import of JSON files
    "skipLibCheck": true            // Speeds up compilation by skipping type checks in node_modules
  },
  "ts-node": {
    "esm": true                      // ts-node runs ES modules directly
  }
}
